{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "sourceMap": true,
      "outDir": "./dist",
      "strict": true,
      "lib": ["esnext", "dom"],
      "esModuleInterop": true,
      "skipLibCheck": true,
      "allowJs": true,
      "checkJs": false,
      "resolveJsonModule": true,
      "moduleResolution": "node"
    },
    "include": ["src/**/*"],
    "exclude": ["dist", "node_modules"],
    "ts-node": {
      "files": true
    }
  }